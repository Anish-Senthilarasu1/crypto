# Alpaca API Configuration
# Get your API keys from: https://alpaca.markets/

# For paper trading (recommended for testing)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_API_SECRET=your_alpaca_secret_key_here
ALPACA_PAPER=true

# For live trading (use with caution!)
# ALPACA_PAPER=false

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=deepseek-r1:14b

# Trading Configuration
MAX_POSITION_SIZE=0.10  # 10% of portfolio per trade
RISK_FREE_RATE=0.0      # For Sharpe calculation
TRADING_SYMBOLS=BTC/USD,ETH/USD

# Risk Management
MAX_DRAWDOWN=0.30       # 30% max drawdown before shutdown
STOP_LOSS_PCT=0.05      # 5% stop loss
KELLY_FRACTION=0.25     # Quarter-Kelly for position sizing

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs
